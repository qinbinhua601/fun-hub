extends layout

block content

  #app.container
    .tv-list(v-if="false")
      .row(v-for="i in Math.ceil(list.length / 3)" v-if="list.length")
        card(
          v-for="item in list.slice((i - 1) * 3, 3 * i)",
          :item="item",
          :key="item.aid",
          @on-card-remove-from-favorite="removeFromFavoriteList"
        )
      .no-video-tip.text-center(v-else) no favorite video available
    ul.week-list
      li(v-for="(day, index) of weekDays") {{ weekList[index] }}
        ul
          li(v-for="(item, index) of day") {{ (index + 1) + '. ' + item.title }}
  script(src="/js/favorite.js")